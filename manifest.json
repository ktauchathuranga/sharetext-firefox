{
  "manifest_version": 2,
  "name": "ShareText",
  "version": "0.0.0",
  "description": "Quickly share text/link from your browser to your phone using QR codes. Just select, generate, and scan!",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "applications": {
    "gecko": {
      "id": "sharetext@ktauchathuranga.github.io",
      "strict_min_version": "57.0"
    }
  }
}
